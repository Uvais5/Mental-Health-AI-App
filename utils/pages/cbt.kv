                        font_style: "Subtitle2"
                        pos_hint: {"top": 1.2, "right": 1.2}
                        color: "#513315"

                    MDIconButton:
                        icon: "alert-outline"
                        pos_hint: {"top": 1.07, "right": 0.18}
                        icon_color: "#513315"

                    MDLabel:
                        text: "Don't focus on anything else if you want to be really happy"
                        font_style: "Overline"
                        pos_hint: {"top": 0.9, "right": 1.02}
                        color: "#513315"
            MDBoxLayout:
                
                md_bg_color:0,0,0,0.9
                size_hint_y: None
