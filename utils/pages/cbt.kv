                        padding:dp(20)
                        font_style: "H6"
                        pos_hint: {"top": 1.42,"right":1.1}
                    MDLabel:
                        text: "CBT is for anyone who struggles with:"
                        font_style: "Subtitle1"
                        pos_hint: {"top": 1.2}
                    MDLabel:
                        text: "1. Overthinking and constant worry\n\n2. Feeling stuck in negative habits or emotions\n\n3. Emotional imbalance or mood swings\n\n4. Difficulty managing stress or daily challenges\n\n5. Low motivation, productivity, or confidence"
                        font_style: "Subtitle2"
                        pos_hint: {"top": 0.8}
                    

            MDBoxLayout:
