                            color: "white"

                            #pos: "40dp", "0dp"
                            pos_hint: {"top": 0.8, "right": 1.4}
                        
    MDScrollView:
        MDBoxLayout:
            #md_bg_color:"black"
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(16)
            padding: dp(2)
            MDIconButton:
                icon:"chevron-left"
                icon_size:40
                pos_hint:{"top":1}
                on_release:app.change_screen("home")
            MDBoxLayout:
                size_hint_y: None
                height: dp(280)
                spacing: dp(10)
               
            MDBoxLayout:
                orientation: "vertical"
                padding: dp(10)
                spacing: dp(1)
                radius:[20]
                md_bg_color: 0,0,0,0.9
                size_hint_y: None
                height: dp(550)
                MDRelativeLayout:
                    MDIconButton:
                        icon:"drag-horizontal-variant"
                        
                        icon_size:40
                        pos_hint: {"top": 1.05,"right":0.6}
                    MDLabel:
                        text:"Overview"
                        pos_hint: {"top": 1.3}
                    MDLabel:
                        text: "Cognitive behavioral therapy (CBT) is a form of psychological treatment that has been demonstrated to be effective for a range of problems including depression, anxiety disorders, alcohol and drug use problems, marital problems, eating disorders, and severe mental illness. Numerous research studies suggest that CBT leads to significant improvement in functioning and quality of life. In many studies, CBT has been demonstrated to be as effective as, or more effective than, other forms of psychological therapy or psychiatric medications..."
                        font_style: "Subtitle2"
                        color: "white"
                        pos_hint: {"top": 0.9}
                
                
                MDCard:
                    size_hint_y: None
                    height: dp(150)
                    FitImage:
                        source:"https://i.pinimg.com/564x/e1/5a/39/e15a39e3e5567139398e3c484ad06ff2.jpg"
                        radius:[20,0,0,20]
                        size_hint_y:1
                        size_hint_x:0.5

                        
                    FitImage:
                        radius:[0,20,20,0]
                        source:"https://i.pinimg.com/564x/e3/eb/c7/e3ebc7d142c98b1ea141a8797d934f37.jpg"
                        size_hint_y:1
                        size_hint_x:0.5
