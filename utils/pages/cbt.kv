                        theme_icon_color: "Custom"
                        icon_color: "white"

                    MDLabel:
                        text: "2. Imagery-Based CBT with AI"
                        font_style: "Subtitle1"
                        theme_text_color: "Custom"
                        text_color: "white"
                        bold: True

                MDLabel:
                    text: "‚Ä¢ Personalized mental imagery prompts\n\n‚Ä¢ AI suggests calming or motivating visuals\n\n‚Ä¢ Helps rewire emotional responses via visualization"
                    font_style: "Body2"
                    theme_text_color: "Custom"
                    text_color: "white"
                    halign: "left"

                MDLabel:
                    text: "üåÑ Example: Feeling anxious? Visualize a peaceful forest or safe space guided by AI."
                    font_style: "Caption"
                    theme_text_color: "Custom"
                    text_color: "#d2b48c"
                    halign: "left"


            MDBoxLayout:
                orientation:"vertical"
                size_hint_y: None
                height: dp(200)
                spacing: dp(100)
