                    on_release:root.show_video_dialog()
                    radius:[30]
                    FitImage:
                        id: gif
                        source: 'C:/Users/uvais/Downloads/pimg/q14.jpg'
                        radius:[30]
                        size_hint_y: 1
                        #padding:5
                    
                    
            MDBoxLayout:
