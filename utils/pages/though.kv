                    MDBoxLayout:
                        padding:20
                        
                        size_hint_y:2
                        MDRelativeLayout:
                            MDLabel:
                                text:"What is CBT thought reframing ?"
                                bold:True
                                font_style:"H5"
                                pos_hint:{"top":1.6}
                                color:"#513315"
                            MDLabel:
                                text:"Cognitive behavioral therapy (CBT) thought reframing is a technique that helps people identify and replace negative thoughts with more positive ones. It's a skill that can help people break cycles of depression, anxiety, and stress."
                                font_style:"Subtitle2"
                                pos_hint:{"top":1.1}
                                color:"#666666"
                    
                    MDBoxLayout:
                        padding:20
                        #md_bg_color:"black"
                        size_hint_y:1.2
                        MDRelativeLayout:
                            MDLabel:
                                text:" Thought Reframing AI can help in following things:. "
                                font_style:"H6"
                                pos_hint:{"top":2}
                                color:"#513315"
                    
                            MDLabel:
                                text:"1.Detects negative thinking patterns.\n\n 2.Asks questions to challenge beliefs.\n\n 3.Improve emotional responses.\n\n 4.See things from another perspective.\n\n 5.Reinforcing New Thought Patterns"
                                font_style:"Subtitle1"
                                pos_hint:{"top":0.9}
                                color:"#666666"
                    
                    MDNavigationDrawerDivider
