                                        source:"https://i.pinimg.com/564x/96/01/9e/96019e091351443caf7462a27738d499.jpg"
                                        radius:[30]
                                        pos_hint:{"top":1.1}
                                        size_hint_y:1.3
                                        
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"3. Ask yourself questions :"
                                        font_style:"Subtitle1"
                                        pos_hint:{"top":0.8}
                                        color:"#513315"
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"Consider what the worst and best outcomes could be, and what would happen if you kept reacting the same way. You can also ask yourself what you would tell a friend if the situation happened to them.. ."
                                        font_style:"Caption"
                                        pos_hint:{"top":1}
                                        color:"#666666"
                                MDBoxLayout:
                                    padding:20
                                    size_hint_y:2
                                    FitImage:
                                        source:"C:/Users/uvais/Downloads/pimg/q19.jpg"
                                        radius:[30]
                                        pos_hint:{"top":0.8}
                                        size_hint_y:1.3
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"4. Be honest :"
                                        font_style:"Subtitle1"
                                        pos_hint:{"top":0}
                                        color:"#513315"
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"Try to be as honest as you can when working through the steps. ."
                                        font_style:"Caption"
                                        pos_hint:{"top":0.8}
                                        color:"#666666"
                                MDBoxLayout:
                                    padding:20
                                    size_hint_y:2
                                    FitImage:
                                        source:"C:/Users/uvais/Downloads/pimg/q20.jpg"
                                        radius:[30]
                                        pos_hint:{"top":0.8}
                                        size_hint_y:1.3
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"5. Keep a record :"
                                        font_style:"Subtitle1"
                                        pos_hint:{"top":0.3}
                                        color:"#513315"

                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"You can write down your thoughts and record them in a journal or on an app.. ."
                                        font_style:"Caption"
                                        pos_hint:{"top":1.2}
