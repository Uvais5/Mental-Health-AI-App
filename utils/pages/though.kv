                                        pos_hint:{"top":0.8}
                                        color:"#513315"
                                MDBoxLayout:
                                    padding:20
                                    MDLabel:
                                        text:"Think about what happened, what you were thinking, and what the implications were for you. ."
                                        font_style:"Caption"
                                        pos_hint:{"top":1.4}
                                        color:"#666666"
